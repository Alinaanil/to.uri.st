<?xml version="1.0" encoding='utf-8'?>
<service
	xmlns="http://purl.org/atom/app#"
	xmlns:atom="http://www.w3.org/2005/Atom"
	xmlns:os="http://a9.com/-/spec/opensearch/1.1/"
	xmlns:geo="http://a9.com/-/opensearch/extensions/geo/1.0/"
>
	<workspace title="to.uri.st">
		<collection
			href="/search.atom"
			os:template="/search.atom?c={geo:lat},{geo:lon}&amp;q={searchTerms?}"
			atom:type="application/atom+xml"
			atom:rel="start"
		>
			<atom:title>Attractions</atom:title>
		</collection>
		<collection
			href="/recent.atom"
			os:template="/recent.atom?c={geo:lat},{geo:lon}"
			atom:type="application/atom+xml"
			atom:rel="changes"
		>
			<atom:title>Recent changes</atom:title>
		</collection>
	</workspace>
</service>
